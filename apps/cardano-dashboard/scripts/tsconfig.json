{
    "compilerOptions": {
        "target": "es2017",
        "module": "commonjs",
        "lib": [
            "es2017",
            "dom"
        ],
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "../dist",
        "rootDir": "..",
        "baseUrl": "..",
        "paths": {
            "*": [
                "*"
            ]
        }
    },
    "include": [
        "./**/*.ts",
        "../src/types/**/*.ts"
    ]
}